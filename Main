<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Generate AI Image</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      padding: 20px;
    }
    input, button {
      padding: 10px;
      margin-top: 20px;
    }
    img {
      margin-top: 20px;
      max-width: 100%;
      height: auto;
    }
  </style>
</head>
<body>
  <h1>Generate AI Image from Text</h1>
  <input type="text" id="prompt" placeholder="Enter your text here" />
  <button onclick="generateImage()">Generate Image</button>
  <div id="result"></div>

  <script>
    async function generateImage() {
      const prompt = document.getElementById("prompt").value;
      if (prompt.trim() === "") {
        alert("Please enter a prompt!");
        return;
      }

      const resultDiv = document.getElementById("result");
      resultDiv.innerHTML = "<p>Generating image...</p>";

      try {
        const response = await fetch('https://api-inference.huggingface.co/models/stabilityai/stable-diffusion-2', {
          method: 'POST',
          headers: {
            'Authorization': 'Bearer YOUR_HUGGING_FACE_API_KEY',
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ inputs: prompt })
        });
        const data = await response.json();
        if (data && data.data && data.data[0]) {
          const imageUrl = data.data[0].url;
          resultDiv.innerHTML = `<img src="${imageUrl}" alt="Generated Image" />`;
        } else {
          resultDiv.innerHTML = "<p>Error generating image. Try again.</p>";
        }
      } catch (error) {
        console.error("Error:", error);
        resultDiv.innerHTML = "<p>Error generating image. Try again.</p>";
      }
    }
  </script>
</body>
</html>
